<h2>Sign up</h2>
<div class="large-8 large-centered columns">
  <div class="login-box">
  <div class="row">
  <div class="large-12 columns">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row collapse prefix-radius">
    <div class="small-1 columns">
      <span class="prefix"><i class="fi-mail"></i></span>
    </div>
    <div class="small-11 columns">
      <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
    </div>
  </div>

  <div class="row collapse prefix-radius">
    <div class="small-1 columns">
      <span class="prefix"><i class="fi-torso"></i></span>
    </div>
    <div class="small-11 columns">
      <%= f.text_field :nickname, placeholder: "Nickname" %>
    </div>
  </div>

  <div class="row collapse prefix-radius">
    <div class="small-1 columns">
      <span class="prefix"><i class="fi-lock"></i></span>
    </div>
    <div class="small-11 columns">
      <%= f.password_field :password, autocomplete: "off", placeholder: "password (minimum 8 characters)" %>
    </div>
  </div>

  <div class="row collapse prefix-radius">
    <div class="small-1 columns">
      <span class="prefix"><i class="fi-lock"></i></span>
    </div>
    <div class="small-11 columns">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password confirmation" %>
    </div>
  </div>

  <div class="row collapse">
    <%= f.submit "Sign up" , :class => "button"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>